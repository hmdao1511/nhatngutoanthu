<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tất cả mẫu ngữ pháp</h1>
    <%= link_to 'New grammar point', new_grammar_point_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="grammar_points" class="min-w-full">
    <h2>N5</h2>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @grammar_points.each do |grammar_point| %>
        <% if grammar_point.jlpt_level.upcase == "N5" %>
          <div class="border-2 rounded-lg hover:bg-slate-200">
            <p class="break-all text-center"><%= link_to grammar_point.grammar_point_japanese, grammar_point_path(grammar_point.id)  %></p>
            <p class="break-all text-center"><%= grammar_point.grammar_point_brief_translation %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div id="grammar_points" class="min-w-full">
    <h2>N4</h2>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @grammar_points.each do |grammar_point| %>
        <% if grammar_point.jlpt_level.upcase == "N4" %>
          <div class="border-2 rounded-lg hover:bg-slate-200">
            <p class="break-all text-center"><%= link_to grammar_point.grammar_point_japanese, grammar_point_path(grammar_point.id)  %></p>
            <p class="break-all text-center"><%= grammar_point.grammar_point_brief_translation %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
